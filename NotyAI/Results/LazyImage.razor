@if (_isLoaded)
{
    <img src="@Src" alt="image" />
    
}
else
{
    <MudSkeleton Width="100%" Height="20px" Animation="Animation.Wave"/>
    <img src="@Src" alt="image" @onload="Loaded" class="invisible" />
}

@code {
    [Parameter]
    public string Src { get; set; } = string.Empty;
    private bool _isLoaded;

    private void Loaded()
    {
        _isLoaded = true;
        StateHasChanged();
    }

}